const http = require('http');
const fs = require('fs');
let parseBody ='' ;

const server = http.createServer((req,res)=>{
    const url = req.url;
    const method = req.method;
    if(url === '/'){
        res.write('<html>');
        res.write('<head><title>Enter Message</title></head>');
        res.write(`<body>${parseBody}<form action="/message" method="POST"><input type="text"><button type="submit">Send</button></form></body>`);
        res.write('</html>');
        return res.end();
    }
    if(url === '/message' && method === 'POST'){
        const body = [];
        req.on('data',(chunk)=>{
            console.log(chunk);
            body.push(chunk);
        });
        req.on('end',()=>{
            parseBody = Buffer.concat(body).toString();
            msg = fs.writeFileSync('message.txt',parseBody);  
        });

        res.statusCode = 302;
        res.setHeader('Location','/');
        return res.end();
    }

    res.end();
});

server.listen(3000);
